<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDS.PDC.Views.Registro"
             Title="Registrar cuenta"
             Background="lightGray"
             Visual="Material">


    <StackLayout>

        <Frame Margin="40,180" CornerRadius='10'>

            <StackLayout>
                <Entry 
                    Margin="0,0,0,5"
                    Placeholder="Usuario" x:Name="TxtUsuario" TextColor="Black">

                </Entry>
                <Entry
                    Margin="0,0,0,5"
                    Placeholder="Contraseña" x:Name="TxtContraseña" TextColor="Black" >
                    
                </Entry>
                
                <Entry 
                    
                    Placeholder="Correo electronico" x:Name="TxtCorreo" TextColor="Black">
                    
                </Entry>

                <Button

                    HeightRequest="50"
                    Margin="0,10"    
                    Text="Registrar"
                    TextColor="Black"
                    FontSize="20"
                    
                    Clicked="Autenticar_Registro">   

                </Button>

            </StackLayout>

          
            
            
        </Frame>
        
    </StackLayout>
            
               
</ContentPage>